<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_20dp"
    tools:context=".PopularDialogFragment">

    <LinearLayout
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_300dp"
        android:layout_margin="@dimen/_16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_dialog"
            android:layout_width="@dimen/_200dp"
            android:layout_height="@dimen/_100dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/pop_image_6" />

        <FrameLayout
            android:id="@+id/fm_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:gravity="center"
                    android:text="@string/lable_name"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rt_bar_dialog"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="16dp"
                    android:numStars="5"
                    android:rating="3" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_kind_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lable_kind"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_desc_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/lable_description"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>